<!DOCTYPE html>
<html>
<head>
<title>Improve Online</title>
<!--[if lt IE 9]>
<script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
<![endif]-->
<%= stylesheet_link_tag    "application", :media => "all" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="span12">
				<%= render "nav" %>
			</div>
		</div>
		<div class="row">
			<div class="span2">
				<%= render "subnav" %>
			</div>
			<div class="span8">
				<div class="well" style="min-height:600px; background-color:#fff;">
					<% flash.each do |name, msg| %>
						<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
							<a class="close" data-dismiss="alert">Ã—</a>
							<%= msg %>
						</div>
					<% end %>
				<%= yield %>
				</div>
			</div>
			<div class="span2">
				<%= render "tasks" %>
			</div>
		</div>
	</div>
		<%= render "helpmodals" %>
</body>
</html>
