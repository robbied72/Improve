<h1>Contacts</h1>

<table class="table table-condensed">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Company</th>
    <th>Telephone Number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.fname %></td>
    <td><%= contact.lname %></td>
    <td><%= contact.company %></td>
    <td><%= contact.tel %></td>
    <td><%= link_to 'Show', contact, :class => "btn btn-mini btn-primary" %></td>
    <td><%= link_to 'Edit', edit_contact_path(contact), :class => "btn btn-mini btn-primary" %></td>
    <td><%= link_to 'Destroy', contact, confirm: 'Are you sure?', method: :delete, :class => "btn btn-mini btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Contact', new_contact_path, :class => "btn btn-mini btn-success" %>
